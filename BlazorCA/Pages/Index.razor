@page "/"
@implements Character
@inherits Movie
@inject HttpClient Http

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
<h1 class="text-center text-primary">A Blazor website using the Studio Ghibli Api</h1>

@if (characters == null)
{
    <p><em>Loading...</em></p>
}
else
{
<div class="container">
    <div class="row">
        <div class="col-4">
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Gender</th>
                        <th>Age</th>
                        <th>Eye Colour</th>
                        <th>Hair Colour</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var character in characters)
                    {
                        <tr>
                            <td>@character.Name</td>
                            <td>@character.Gender</td>
                            <td>@character.Age</td>
                            <td>@character.Eye_color</td>
                            <td>@character.Hair_color</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-4">
            <table class="table">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Director</th>
                        <th>Producer</th>
                        <th>Release Date</th>
                        <th>Rotten Tomatoes Score</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var film in films)
                    {
                        <tr>
                            <td>@film.Title</td>
                            <td>@film.Description</td>
                            <td>@film.Director</td>
                            <td>@film.Producer</td>
                            <td>@film.Release_date</td>
                            <td>@film.Rt_score</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
}

@code{
    private List<CharacterList> characters = new List<CharacterList>();
    private List<FilmList> films = new List<FilmList>();
    protected override async Task OnInitializedAsync()
    {
        characters = await Http.GetFromJsonAsync<List<CharacterList>>("/people");
        films = await Http.GetFromJsonAsync<List<FilmList>>("/films");
    }
}